# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Season
GET     /season                       controllers.SeasonController.index
GET     /seasons                        controllers.SeasonController.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /season/new                   controllers.SeasonController.add
POST    /seasons                       controllers.SeasonController.save
GET     /season/:id                   controllers.SeasonController.edit(id: Long)
POST    /season/:id                     controllers.SeasonController.update(id: Long)
GET     /season/delete/:id                 controllers.SeasonController.delete(id: Option[Long])

#Arena
GET     /arena                       controllers.ArenaController.index
GET     /arenas                        controllers.ArenaController.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /arena/new                   controllers.ArenaController.add
POST    /arenas                       controllers.ArenaController.save
GET     /arena/:id                   controllers.ArenaController.edit(id: Long)
POST    /arena/:id                     controllers.ArenaController.update(id: Long)
GET     /arena/delete/:id                 controllers.ArenaController.delete(id: Option[Long])

#Competition
GET     /competition                       controllers.CompetitionController.index
GET     /competitions                        controllers.CompetitionController.list(p:Int ?= 0, s:Int ?= 2, f ?= "")
GET     /competition/new                   controllers.CompetitionController.add
POST    /competitions                       controllers.CompetitionController.save
GET     /competition/:id                   controllers.CompetitionController.edit(id: Long)
POST    /competition/:id                     controllers.CompetitionController.update(id: Long)
GET     /competition/delete/:id                 controllers.CompetitionController.delete(id: Option[Long])

